{
    "name": "opsi-script",
    "displayName": "opsi-script",
    "description": "Provides syntax highlighting and code snippets for opsi script",
    "version": "0.1.0",
    "publisher": "uib",
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "opsi-script",
                "aliases": [
                    "opsi-script",
                    "opsi-script"
                ],
                "extensions": [
                    ".opsiscript",
                    ".ins"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "opsi-script",
                "scopeName": "source.opsi-script",
                "path": "./syntaxes/opsi-script.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.shellscript": "shellscript",
                    "meta.embedded.block.dosbatch": "dosbatch",
                    "meta.embedded.block.powershell": "powershell",
                    "meta.embedded.block.python": "python"
                }
            }
        ],
        "snippets": [
            {
                "language": "opsi-script",
                "path": "./snippets/opsi-script.code-snippets"
            }
        ],
        "commands": [
            {
                "command": "opsi-script.testCommand",
                "title": "opsi-script test Command"
            }
        ]
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:opsi-script.testCommand",
        "onLanguage:opsi-script"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.58.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "js-yaml": "^4.1.0"
    }
}
